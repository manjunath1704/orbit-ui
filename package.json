{
  "name": "@manjunath1704/orbit-ui",
  "version": "0.1.0",
  "description": "A UI components library for portfolio with Next.js, Tailwind CSS, and ShadCN",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "author": "manjunath1704",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/manjunath1704/orbit-ui.git"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "nextjs",
    "tailwind",
    "shadcn"
  ],
  "files": [
    "dist",
    "src/components",
    "src/lib"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./components/*": {
      "import": "./src/components/*",
      "require": "./src/components/*"
    },
    "./styles": "./src/app/globals.css"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:lib": "tsup src/index.ts --format cjs,esm --dts --tsconfig tsconfig.build.json --external react --external react-dom --external next",
    "start": "next start",
    "lint": "eslint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/nextjs-vite": "^10.1.11",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "playwright": "^1.57.0",
    "storybook": "^10.1.11",
    "tailwindcss": "^4",
    "tsup": "^8.5.1",
    "typescript": "^5",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
